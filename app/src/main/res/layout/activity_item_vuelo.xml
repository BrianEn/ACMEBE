<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linearLayoutSingleVuelo"
    android:layout_width="match_parent"
    android:layout_height="135dp"
    android:layout_gravity="center_horizontal"
    android:layout_marginBottom="5dp"
    android:orientation="horizontal"
    android:padding="10dp">

    <ImageView
        android:id="@+id/imageViewViaje"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/vuelo" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textVieworigen1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Origen:"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textViewDestino2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Destino:"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textViewPrecio2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Precio:"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textViewEscala2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Escalas:"
            android:textSize="20dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center
"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewOrigen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Origen"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textViewDestino"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Destino"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textViewPrecio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Precio"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textViewEscala"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Escalas"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewfechasalida1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Salida"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textViewFechaSalida"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Origen"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textViewfechallegada1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="Llegada"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textViewFechaLlegada"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Destino"
            android:textSize="20dp" />
    </LinearLayout>
</LinearLayout>